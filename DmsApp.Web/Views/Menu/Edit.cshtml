@model DmsApp.Web.Models.MenuItem
@{
    ViewData["Title"] = "Edit Menu";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="mb-3">Edit</h4>

                <form asp-action="Edit" method="post" class="row g-3">
                    <input type="hidden" asp-for="Id" />
                    <div class="col-md-6">
                        <label asp-for="MenuName" class="form-label"></label>
                        <input asp-for="MenuName" class="form-control" />
                        <span asp-validation-for="MenuName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MenuCode" class="form-label"></label>
                        <input asp-for="MenuCode" class="form-control" />
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="PIC" class="form-label"></label>
                        <input asp-for="PIC" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Version" class="form-label"></label>
                        <input asp-for="Version" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="LastUpdate" class="form-label"></label>
                        <input asp-for="LastUpdate" class="form-control" type="date" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Module" class="form-label"></label>
                        <input asp-for="Module" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label"></label>
                        <input asp-for="Status" class="form-control" />
                    </div>

                    <div class="col-12">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                    </div>

                    <div class="col-12 text-end">
                        <a class="btn btn-secondary me-2" href="@Url.Action("Index", "Menu")">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
