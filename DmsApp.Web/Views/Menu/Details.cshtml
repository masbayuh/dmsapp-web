@* @page *@
@model DmsApp.Web.Models.MenuItem
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="card-title" >@Model.MenuName</h3>
                <p class="text-muted mb-1">@Model.MenuCode</p>
                <p>@Model.Description</p>

                <dl class="row">
                    <dt class="col-sm-4">Module</dt>
                    <dd class="col-sm-8">@Model.Module</dd>

                    <dt class="col-sm-4">PIC</dt>
                    <dd class="col-sm-8">@Model.PIC</dd>

                    <dt class="col-sm-4">Version</dt>
                    <dd class="col-sm-8">@Model.Version</dd>

                    <dt class="col-sm-4">Last Update</dt>
                    <dd class="col-sm-8">@Model.LastUpdate.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">@Model.Status</dd>

                    <dt class="col-sm-4">Notes</dt>
                    <dd class="col-sm-8">@Model.Notes</dd>
                </dl>

                <div class="mt-3">
                    <a class="btn btn-secondary" href="@Url.Action("Index", "Menu")">Back</a>
                    <a class="btn btn-outline-primary" href="@Url.Action("Edit", "Menu", new { id = Model.Id })">Edit</a>
                    <a class="btn btn-outline-danger" href="@Url.Action("Delete", "Menu", new { id = Model.Id })">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>
