@model IEnumerable<DmsApp.Web.Models.MenuItem>
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Dashboard</h1>
    <a href="@Url.Action("Create", "Menu")" class="btn btn-primary">Tambah Menu</a>
</div>

<div class="row g-3">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nama Menu</th>
                                <th>Menu Code</th>
                                <th>Module</th>
                                <th>PIC</th>
                                <th>Version</th>
                                <th>Last Update</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-semibold">@item.MenuName</div>
                                        <small class="text-muted">@item.Description</small>
                                    </td>
                                    <td>@item.MenuCode</td>
                                    <td>@item.Module</td>
                                    <td>@item.PIC</td>
                                    <td>@item.Version</td>
                                    <td>@item.LastUpdate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <span class="badge @(item.Status == "Released" ? "bg-success" : "bg-secondary")">@item.Status</span>
                                    </td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Details", "Menu", new { id = item.Id })">View</a>
                                        <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Edit", "Menu", new { id = item.Id })">Edit</a>
                                        <a class="btn btn-sm btn-outline-danger" href="@Url.Action("Delete", "Menu", new { id = item.Id })">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <small class="text-muted">Showing @Model?.Count() ?? 0 items. Data comes from in-memory list (dummy excel).</small>
                </div>
            </div>
        </div>
    </div>
</div>


